{
  "title": "Next Serve",
  "description": "Serve a Next.js app",
  "type": "object",
  "properties": {
    "dev": {
      "type": "boolean",
      "description": "Serve the application in the dev mode",
      "default": true
    },
    "buildTarget": {
      "type": "string",
      "description": "Target which builds the application."
    },
    "customServerTarget": {
      "type": "string",
      "description": "Target which builds a custom server",
      "default": null
    },
    "skipBuild": {
      "type": "boolean",
      "description": "Skip building buildTarget and customServerTarget.",
      "default": false
    },
    "hostname": {
      "type": "string",
      "description": "Hostname on which the application is served.",
      "default": null
    },
    "port": {
      "type": "number",
      "description": "Port to listen on.",
      "default": 4200
    }
  },
  "required": []
}
